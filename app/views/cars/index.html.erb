<div class="col-md-12">
  <div class="car">
    <% if can? :manage, Car %>
      <%= link_to("New car", new_car_path) %>
    <% end %>
  </div>
  <table class="table table-hover">
    <thead>
	  <h2>Cars List</h2>
      <%= form_tag cars_path, method: :get do %>
        <% select_tag :condition, options_for_select([:Model, :Make, :Style, :Location, :Status], params[:condition]) %>
        <p>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Search" %>
        </p>
      <% end %>


      <tr>
        <td>#</td>
        <td>Plate</td>
        <td>Make</td>
        <td>Model</td>
        <td>Rate</td>
        <td>Style</td>
        <td>Location</td>
        <td>Status</td>
      </tr>
    </thead>
    <tbody>
      <% @cars.each do |car| %>
        <tr>
          <td>#</td>
          <td><%= link_to(car.plate, car_path(car)) %></td>
          <td><%= car.make %></td>
          <td><%= car.model %></td>
          <td><%= car.rate %></td>
          <td><%= car.style %></td>
          <td><%= car.location %></td>
          <td><%= check_status(car)%></td>
          <td>
            <% if can? :manage, Car %>
              <%= link_to("Edit", edit_car_path(car), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", car_path(car), class: "btn btn-sm btn-default",
                              method: :delete, data: { confirm: "Are you sure?" } )%>
            <% else %>
              <% if check_status(car) == "available" %>
                <%= link_to "Make a Reservation", {:controller => "reservations", :action => "new", :car_id => car.id }%>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
