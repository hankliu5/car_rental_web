<%= form_for @reservation do |f| %>
  <% if @reservation.errors.any? %>
    <ul>
      <% @reservation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="">
    <h2>Reservation details</h2>
    <table>
      <thead>
        <tr>
          <td>Username</td>
          <td>Car Plate</td>
          <td>Car Model</td>
          <td>Car Make</td>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @user.username %></td>
          <td><%= @car.plate %></td>
          <td><%= @car.make %></td>
          <td><%= @car.model %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <br>
  <%= f.label :pick_up_time %><br>
  <%= f.datetime_select :pick_up_time %>
  <br>
  <br>
  <%= f.label :return_time %><br>
  <%= f.datetime_select :return_time %>
  <br>
  <%= f.hidden_field :car_id, value: @car.id %>
  <%= f.hidden_field :user_id, value: @user.id %>
  <br>
  <%= f.submit "Submit", :disable_with => 'Submiting...' %>
  <br>
<% end %>
