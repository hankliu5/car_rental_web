<div class="col-md-4 col-md-offset-4">
  <h2>Edit <%= @user.username.to_s.humanize %>'s Password</h2>
  <hr>
  <%= simple_form_for(@user, :url => { :action => "update_password" } ) do |f| %>
  <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
    <div class="form-group">
      <%= f.input :password, input_html: { class: "form-control"} %>
      <%= f.input :password_confirmation, input_html: { class: "form-control"} %>
      <%= f.input :current_password, input_html: { class: "form-control"} %>
      <%= f.submit "Submit", class: "btn btn-primaty", :disable_with => 'Submiting...' %>
    </div>
  <% end %>
  <%= link_to "Back", :back %>
</div>
