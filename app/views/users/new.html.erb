<div class="col-md-4 col-md-offset-4">
  <h2>Create a new <%= current_user.roles.all[0].name %></h2>
  <hr>
  <%= simple_form_for @user do |f| %>
    <% if @user.errors.any? %>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="form-group">
      <%= f.input :username, input_html: { class: "form-control"} %>
      <%= f.input :email, input_html: { class: "form-control"} %>
      <%= f.input :password, input_html: { class: "form-control"} %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.input :password_confirmation, input_html: { class: "form-control"} %>
      <%= f.submit "Sign Up", class: "btn btn-primaty", :disable_with => 'Submiting...' %>
    </div>
  <% end %>
  <%= link_to "Back", :back %>
</div>
